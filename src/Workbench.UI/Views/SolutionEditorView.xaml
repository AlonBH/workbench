<Window x:Class="Workbench.Views.SolutionEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:cal="http://www.caliburnproject.org"
        Title="Soluton Editor" Height="300" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" Visibility="Visible">
    
    <StackPanel Margin="0,0,0,141">
        <TextBox x:Name="bindingEditor" TextWrapping="NoWrap" Margin="0,0,0,54" Text="{Binding BindingExpression}"/>
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="ButtonOk" IsDefault="True" Content="_OK" Grid.Column="0" Margin="0,0,5,0" Padding="8">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <cal:ActionMessage MethodName="AcceptButton" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button Name="BtnCancel" IsCancel="True" Content="_Cancel" Grid.Column="1" Margin="5,0,0,0" Padding="8"/>
        </Grid>
    </StackPanel>

</Window>
