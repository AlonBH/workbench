<Window x:Class="Workbench.Views.ShellView"
        x:Name="Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Path=TitleBar.Title}"
        Height="800" Width="500"
        FocusManager.FocusedElement="{Binding ElementName=WorkArea}"
        Icon="../Images/AppIcon.ico">

    <DockPanel LastChildFill="True">
        <ContentControl x:Name="ApplicationMenu" DockPanel.Dock="Top"/>

        <ContentControl x:Name="WorkArea"/>
    </DockPanel>
</Window>
